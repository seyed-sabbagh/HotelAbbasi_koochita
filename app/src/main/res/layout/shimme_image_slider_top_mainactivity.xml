<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#c1c1c1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="#c1c1c1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_ButtomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text="@string/moarefi_koli"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text="@string/naghshe"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView18"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text="@string/nazarat"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text="@string/porsesh_pasokh"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:lines="1"
            android:text="@string/makan_haye_moshabeh"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <View
            android:id="@+id/HotelTitles2"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/imageView2002"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="#c1c1c1"
            android:src="@drawable/placeholder"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <LinearLayout
            android:id="@+id/imageView4004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#c1c1c1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2">


            <View
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/ImgCall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="#c1c1c1"
            app:layout_constraintEnd_toEndOf="@+id/imageView2002"
            app:layout_constraintTop_toBottomOf="@+id/imageView2002" />


        <ImageView
            android:id="@+id/imageView5005"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:background="#c1c1c1"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imageVsiew666"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="#c1c1c1"
            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#c1c1c1"
            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="@+id/imageVsiew666"
            app:layout_constraintStart_toStartOf="@+id/imageVsiew666"
            app:layout_constraintTop_toBottomOf="@+id/imageVsiew666">


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#c1c1c1"
            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView">


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text="@string/emtiyaz_karbaran"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/HotelTitles2"
            app:layout_constraintTop_toBottomOf="@+id/HotelTitles2" />

        <TextView
            android:id="@+id/Site2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/iransans"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5005"
            app:layout_constraintEnd_toStartOf="@+id/imageView5005"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="@+id/imageView5005" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text=" 03132226010 "
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/ImgCall"
            app:layout_constraintEnd_toStartOf="@+id/ImgCall"
            app:layout_constraintTop_toTopOf="@+id/ImgCall" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="#c1c1c1"
            android:fontFamily="@font/iransans"
            android:text="@string/adres"
            android:textColor="#c1c1c1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2002"
            app:layout_constraintEnd_toStartOf="@+id/imageView2002"
            app:layout_constraintTop_toTopOf="@+id/imageView2002" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:background="#c1c1c1" />


</LinearLayout>